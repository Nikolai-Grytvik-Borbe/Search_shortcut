{
  "manifest_version": 3,
  "name": "Search shortcut",
  "version": "1.0",
  "description": "Adds a standardized shortcut for selecting the search bar on every website.",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popout.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": ["scripts/script.js"],
      "matches": [
        "*://*.youtube.com/*",
        "*://*.twitch.tv/*",
        "*://*.wikipedia.org/*",
        "*://*.twitter.com/*",
        "*://*.xvideos.com/*",
        "*://*.pornhub.com/*",
        "*://*.elkjop.no/*",
        "*://*/*"
      ]
    },
    {
      "run_at": "document_start",
      "js": [
        "scripts/google.js"
      ],
      "matches": [
        "*://*.google.com/*"
      ]
    },
    {
      "run_at": "document_start",
      "js": [
        "scripts/duckduckgo.js"
      ],
      "matches": [
        "*://*.duckduckgo.com/*"
      ]
    },
    {
      "run_at": "document_start",
      "js": [
        "scripts/amazon.js"
      ],
      "matches": [
        "*://*.amazon.com/*"
      ]
    }
  ]
}
