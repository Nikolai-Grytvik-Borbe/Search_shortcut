{
  "manifest_version": 3,
  "name": "Search shortcut",
  "version": "1.0",
  "description": "Adds a standardized shortcut for selecting the search bar on every website.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popout.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": ["scripts/script.js", "scripts/script2.js"],
      "matches": [
        "*://*/*"
      ]
    },
    {
      "run_at": "document_start",
      "js": [
        "scripts/google.js"
      ],
      "matches": [
        "*://*.google.com/*"
      ]
    },
    {
      "run_at": "document_start",
      "js": [
        "scripts/bbc.js"
      ],
      "matches": [
        "*://*.bbc.com/*"
      ]
    }
  ]
}
